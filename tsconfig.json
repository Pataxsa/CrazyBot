{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "node",
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"allowJs": false,
		"forceConsistentCasingInFileNames": true,
		"sourceMap": false,
		"declaration": false,
		"noEmitOnError": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["*"]
		}
	},
	"exclude": ["node_modules", "dist"]
}
